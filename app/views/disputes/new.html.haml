        = link_to raw('<img src="/images/icons/picture.jpg" alt="London" />'), '#'
        = link_to raw('<img src="/images/icons/picture.jpg" alt="London" />'), '#'
        = link_to raw('<img src="/images/icons/picture.jpg" alt="London" />'), '#', :class => 'video'
        = link_to raw('<img src="/images/icons/picture.jpg" alt="London" />'), '#', :class => 'video'
